<Window x:Class="Task_Management.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Management"
        mc:Ignorable="d"
        Title="Manager" Height="450" Width="800">
    <Grid>
        <Border Width="450" Height="350" BorderBrush="Black" BorderThickness="3"></Border>
        <Border Width="450" Height="3" BorderBrush="Black" BorderThickness="3" Margin="175,67,175,364"></Border>
        <TextBlock Text="User Management Page" Width="200"  Height="22" Margin="184,45,416,367" FontFamily="Segoe UI Semibold"></TextBlock>
        <TextBlock Text="TaskId: " Width="60" Height="20" Margin="190,100,550,314" FontFamily="Comic Sans MS"></TextBlock>
        <TextBox Name="idt" BorderThickness="2" BorderBrush="Black" Width="120" Height="30" Margin="264,90,416,314"></TextBox>
        <TextBlock Text="Title: " Width="60" Height="20" Margin="190,152,550,262" FontFamily="Comic Sans MS"></TextBlock>
        <TextBlock FontFamily="Comic Sans MS" Text="Description:" Width="80" Height="30" Margin="180,192,540,212"></TextBlock>
        <TextBox Name="tit" BorderThickness="2" BorderBrush="Black" Width="120" Height="30" Margin="264,142,416,262"></TextBox>
        <TextBox Name="desc"  BorderThickness="2" BorderBrush="Black" Width="120" Height="30" Margin="264,192,416,212"></TextBox>
        <TextBlock Text="Status:" Width="50" Height="20" Margin="415,91,335,323" FontFamily="Comic Sans MS"></TextBlock>
        <ComboBox Name="comb" Width="90" Height="22" Margin="470,90,240,322">
            <ComboBoxItem Content="Pending"/>
            <ComboBoxItem Content="In Progress"/>
            <ComboBoxItem Content="Completed"/>
        </ComboBox>
        <TextBlock Text="EmployeeName:" Width="90" Height="20" Margin="400,154,310,260" FontFamily="Comic Sans MS"></TextBlock>
        <TextBox Name="emp"  BorderThickness="2" BorderBrush="Black" Width="120" Height="30" Margin="500,149,180,255"></TextBox>
        <Button    Width="70" Height="30" Margin="232,239,498,165" Content="Add" BorderBrush="Black" BorderThickness="3" Background="white" Click="Button_Click" ></Button>
        <Button   Width="70" Height="30" Margin="456,239,274,165" Content="Delete" BorderThickness="3" BorderBrush="Black" Background="White" Click="Button_Click_2"></Button>
        <Button   Width="70" Height="30" Margin="341,239,389,165" Content="Edit" BorderThickness="3" BorderBrush="Black" Background="White" Click="Button_Click_1"></Button>
        <DataGrid SelectionChanged="ManagerTasksDataGrid_SelectionChanged" AutoGenerateColumns="False" Name="ManagerTasksDataGrid" Width="400" Height="110" Margin="200,269,200,45">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="90"></DataGridTextColumn>
                <DataGridTextColumn Header="TaskId" Binding="{Binding TaskId}" Width="50"></DataGridTextColumn>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="80"></DataGridTextColumn>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>



    </Grid>
</Window>
