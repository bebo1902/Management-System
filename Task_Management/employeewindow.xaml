<Window x:Class="Task_Management.employeewindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Management"
        mc:Ignorable="d"
        Title="employeewindow" Height="450" Width="800">
    <Grid>
        <Border Width="400" Height="370" BorderBrush="Black" BorderThickness="3"></Border>
        <Border Width="400" Height="2" BorderBrush="Black" BorderThickness="3" Margin="200,57,200,375"></Border>
        <TextBlock Text="Veiw Tasks" Width="100" Height="15" Margin="205,37,495,382" FontFamily="72 Condensed"></TextBlock>
        <TextBlock Text="Employee" Width="65" Height="30" FontSize="15" FontFamily="Comic Sans MS" Margin="307,60,428,344"></TextBlock>
        <TextBlock Text="Pending/InProgress"   Width="130"  FontSize="13" Height="28" Background="#FFD6DBE0" FontFamily="Bahnschrift SemiBold" Margin="225,95,445,311" ></TextBlock>

        <DataGrid IsReadOnly="False" AutoGenerateColumns="False" Name="TasksDataGrid" BorderBrush="Black" BorderThickness="3" Width="350" Height="100" Margin="225,128,225,206">

            <DataGrid.Columns>
                <DataGridTextColumn Header="TaskId" Binding="{Binding TaskID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="70"></DataGridTextColumn>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="159"></DataGridTextColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="Task:" Width="40" Height="25" Margin="235,242,525,167" FontFamily="Comic Sans MS"></TextBlock>
        <TextBox Text="{Binding SelectedItem.TaskID, ElementName=TasksDataGrid}" BorderBrush="Black" BorderThickness="2" Width="40" Height="30" Margin="290,239,470,165"></TextBox>
        <TextBlock Text="Status:" Width="45" Height="25" Margin="350,241,405,168" FontFamily="Comic Sans MS"></TextBlock>
        <ComboBox Name="StatusComboBox" Width="100" Height="20" Margin="400,242,300,172" >
            <ComboBoxItem Content="Pending"/>
            <ComboBoxItem Content="In Progress"/>
            <ComboBoxItem Content="Completed"/>
        </ComboBox>
        <Button Name="SaveButton" BorderBrush="Black" BorderThickness="2" Width="70" Height="30" Content="Save" Background="White" Margin="505,237,225,167" Click="SaveButton_Click_1" ></Button>
        <TextBlock Text="Complete" Width="70" Background="#FFDBDFE2" Height="20" Margin="220,274,510,140"></TextBlock>
        <DataGrid  Name="CompletedTasksDataGrid" Width="350" Height="100" Margin="220,294,230,35" BorderBrush="Black" BorderThickness="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="TaskId" Binding="{Binding TaskID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="70"></DataGridTextColumn>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="159"></DataGridTextColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Window>